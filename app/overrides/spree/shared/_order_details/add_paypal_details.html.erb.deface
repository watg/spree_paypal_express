<!--
  insert_bottom '.payment-info'
  original 'cd012ef486088f2543371329dde5d4f8f3d4191b'
-->
<%- paypal_payment = order.payments.valid.where(:source_type => "Spree::PaypalAccount").last %>
<% if paypal_payment %>
  <span class="cc-type">
    <%= image_tag "paypal.png" %>
    <%#= t("paypal_payer_statuses.#{paypal_payment.source.payer_status.to_s}").capitalize %>
  </span>
  <br />
  <span class="full-name">
    <%= paypal_payment.source.email %>
  </span>
<% end %>
